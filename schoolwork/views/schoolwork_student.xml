<openerp>
 <data>

    <!-- student -->
    <!--定义表单视图-->
    <record model="ir.ui.view" id="student_form_view">
        <field name="name">学生表单</field>
        <field name="type">form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <form></form>
        </field>
    </record>

    <!--定义列表视图-->
    <record model="ir.ui.view" id="student_tree_view">
        <field name="name">学生列表</field>
        <field name="type">tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"></field>
        <field name="arch" type="xml">
            <tree></tree>
        </field>
    </record>

    <!--定义视图动作-->
    <record model="ir.actions.act_window"  id="action_student">
        <field name="name">学生</field>    <!--这个字符串即课程对应列表或编辑界面的标题-->
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="student_tree_view"/>
    </record>
    
    <!--定义菜单-->
    <menuitem id="menu_item_student" name="学生" parent="menu_infrastructure" action="action_student" sequence="1"/>
 </data>
</openerp>